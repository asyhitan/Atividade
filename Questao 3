public static int maisVelhaIMCMagreza(Pessoa[] v, int qtd) {
    int pos = -1;
    int maiorIdade = -1;

    for (int i = 0; i < qtd; i++) {
        double imc = calcularIMC(v[i]);

  
        if (imc <= 18.5 && v[i].idade > maiorIdade) {
            maiorIdade = v[i].idade;
            pos = i;
        }
    }

    return pos;
}
